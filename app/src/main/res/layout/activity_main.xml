<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:id="@+id/button"
        android:onClick="tutorial1_click"
        android:text="@string/Tutorial1_Title"/>

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4a"
        android:onClick="tutorial4a_click"
        android:text="@string/title_activity_tutorial4a"/>

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4b"
        android:onClick="tutorial4b_click"
        android:text="@string/title_activity_tutorial4b"/>

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tutorial5a"
        android:onClick="tutorial5a_click"
        android:text="Tutorial 5a" />

    <Button android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tutorial6b"
    android:onClick="tutorial6b_click"
    android:text="Tutorial 6b" />

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tutorial7b"
        android:onClick="tutorial7b_click"
        android:text="Tutorial 7b" />

</LinearLayout>
